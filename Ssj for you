    font-family: 'Georgia', serif;
}

.space {
    position: fixed;
    width: 100%;
    height: 100%;
    background: black;
}

.star {
    position: absolute;
    width: 2px;
    height: 2px;
    background: white;
    opacity: 0.8;
}

.galaxy {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 400px;
    height: 400px;
    transform-style: preserve-3d;
    animation: rotateGalaxy 30s linear infinite;
}

@keyframes rotateGalaxy {
    from {
        transform: translate(-50%, -50%) rotate(0deg);
    }
    to {
        transform: translate(-50%, -50%) rotate(360deg);
    }
}

.heart {
    position: absolute;
    color: hotpink;
    font-size: 28px;
}

